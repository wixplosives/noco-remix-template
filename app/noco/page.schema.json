{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Dynamic page data",
    "blocks": {
        "defaultPageTemplate":{
            "type": "object",
            "properties": {
                "__noco__type__": {
                    "type": "string",
                    "enum": ["defaultPageTemplate"]
                },
                "props":{
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "children": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/pageSections"
                            }
                        }
                    }
                }
            },
            "required": ["__noco__type__", "props"]
        },
        "hero": {
            "type": "object",
            "properties": {
                "__noco__type__": {
                    "type": "string",
                    "enum": ["hero"]
                },
                "props":{
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "subtitle": {
                            "type": "string"
                        },
                        "backgroundImage": {
                            "type": "string",
                            "format": "image-url"
                        }
                    }
                }
               
            },
            "required": ["__noco__type__", "props"]
        },
        "gallery": {
            "type": "object",
            "properties": {
                "__noco__type__": {
                    "type": "string",
                    "enum": ["gallery"]
                },
                "props":{
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "images": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "format": "image-url"
                            }
                        }
                    }
                }
            },
            "required": ["__noco__type__", "props"]
        }
        
    },
    "definitions": {

        "pageSections": {
            "oneOf": [{
                "$ref": "#/blocks/hero"
            }, {
                "$ref": "#/blocks/gallery"
            }]
        }
    },
    "oneOf": [{
        "$ref": "#/blocks/defaultPageTemplate"
    }]
}