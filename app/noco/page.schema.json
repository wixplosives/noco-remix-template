{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Dynamic page data",
    "definitions": {
        "defaultPageTemplate":{
            "type": "object",
            "properties": {
                "__noco__type__": {
                    "type": "string",
                    "enum": ["pageTemplates/defaultPageTemplate"]
                },
                "props":{
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "children": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/pageSections"
                            }
                        }
                    }
                }
            },
            "required": ["__noco__type__", "props"]
        },
        "defaultPageTemplates":{
            "oneOf": [{
                "$ref": "#/definitions/defaultPageTemplate"
            }]
        },
        "heroSection": {
            "type": "object",
            "properties": {
                "__noco__type__": {
                    "type": "string",
                    "enum": ["sections/hero"]
                },
                "props":{
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "subtitle": {
                            "type": "string"
                        },
                        "backgroundImage": {
                            "type": "string",
                            "format": "image-url"
                        }
                    }
                }
               
            },
            "required": ["__noco__type__", "props"]
        },
        "gallerySection": {
            "type": "object",
            "properties": {
                "__noco__type__": {
                    "type": "string",
                    "enum": ["sections/gallery"]
                },
                "props":{
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "images": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "format": "image-url"
                            }
                        }
                    }
                }
            },
            "required": ["__noco__type__", "props"]
        },
        "pageSections": {
            "oneOf": [{
                "$ref": "#/definitions/heroSection"
            }, {
                "$ref": "#/definitions/gallerySection"
            }]
        }
    },
    "oneOf": [{
        "$ref": "#/definitions/defaultPageTemplate"
    }]
}